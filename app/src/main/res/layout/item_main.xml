<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    app:cardBackgroundColor="?android:attr/textColorTertiaryInverse">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_m_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="TextView"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/photo_m_order"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/title_m_order"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:srcCompat="@color/colorAccent" />

        <TextView
            android:id="@+id/ingredients_m_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/photo_m_order"
            android:layout_toLeftOf="@+id/left_m_order"
            android:layout_toStartOf="@+id/left_m_order"
            android:gravity="left"
            android:text="TextView" />

        <TextView
            android:id="@+id/left_m_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/photo_m_order"
            android:text="TextView" />

        <TextView
            android:id="@+id/price_m_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/left_m_order"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>
</android.support.v7.widget.CardView>